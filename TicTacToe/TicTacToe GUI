        b5.config(text=turn)
    toggle()

b5 = Button(T, text=" ", command=b5_pressed)
b5.grid()
b5.config(width=10, height=5)

def b6_pressed():
    if b6.cget('text') == 'X':
        b6.config(text='X')
    else:
        b6.config(text="X")
    toggle()

b6 = Button(T, text=" ", command=b6_pressed)
b6.grid()
b6.config(width=10, height=5)

def b7_pressed():
    if b7.cget('text') == 'X':
        b7.config(text=turn)
