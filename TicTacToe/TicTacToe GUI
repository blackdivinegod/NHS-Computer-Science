from tkinter import*

T = Tk()
T.geometry("240x258")
T.title("TicTacToe")

turn = 'X'
def toggle():
    global turn
    if turn=='X':
        turn ='O'
    else:
        turn = 'X'

def b0_pressed():
    if b0.cget('text') == 'X':
        b0.config(text=turn)
    else:
        b0.config(text=turn)
    toggle()

b0 = Button(T, text=" ", command=b0_pressed)
b0.grid()
b0.config(width=10, height=5)

def b1_pressed():
    global turn
    if b1.cget('text') == 'X':
        b1.config(text=turn)
    else:
        b1.config(text=turn)
    toggle()

b1 = Button(T, text=" ", command=b1_pressed)
b1.grid()
b1.config(width=10, height=5)

def b2_pressed():
    if b2.cget('text') == 'X':
        b2.config(text=turn)
    else:
        b2.config(text=turn)
    toggle()

b2 = Button(T, text=" ", command=b2_pressed)
b2.grid()
b2.config(width=10, height=5)

